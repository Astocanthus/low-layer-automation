{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash|Read|Write|Edit|Glob|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/security-guard.sh\"",
            "timeout": 10,
            "statusMessage": "Security check..."
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Write",
      "Edit",
      "Bash(gh pr create:*)",
      "Bash(gh release create:*)",
      "Bash(gh pr view:*)",
      "Bash(gh issue:*)",
      "Bash(gh api:*)",
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(npm install:*)",
      "Bash(npm ci:*)",
      "Bash(npm ls:*)",
      "Bash(npm list:*)",
      "Bash(npm info:*)",
      "Bash(npm outdated:*)",
      "Bash(npm audit:*)",
      "Bash(npx:*)",
      "Bash(ng:*)",
      "Bash(nx:*)",
      "Bash(node:*)",
      "Bash(tsc:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go run:*)",
      "Bash(go mod:*)",
      "Bash(go get:*)",
      "Bash(go vet:*)",
      "Bash(go fmt:*)",
      "Bash(go generate:*)",
      "Bash(go install:*)",
      "Bash(go list:*)",
      "Bash(go env:*)",
      "Bash(go version:*)",
      "Bash(go doc:*)",
      "Bash(golangci-lint:*)",
      "Bash(cargo build:*)",
      "Bash(cargo test:*)",
      "Bash(cargo run:*)",
      "Bash(cargo check:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo doc:*)",
      "Bash(cargo add:*)",
      "Bash(cargo install:*)",
      "Bash(cargo update:*)",
      "Bash(cargo tree:*)",
      "Bash(cargo bench:*)",
      "Bash(rustc:*)",
      "Bash(rustup:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(git remote:*)",
      "Bash(git tag:*)",
      "Bash(git stash:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(ls:*)",
